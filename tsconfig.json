{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["/src/*"],
      "@app/*": ["/src/app/*"],
      "@entities/*": ["/src/entities/*"],
      "@features/*": ["/src/features/*"],
      "@pages/*": ["/src/pages/*"],
      "@shared/*": ["/src/shared/*"],
      "@widgets/*": ["/src/widgets/*"],
      "@TextType": ["/src/shared/ui/textType"]
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}